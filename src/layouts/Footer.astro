---
import {useLocale} from '@utils/locale'
import {PandaConfig} from "../config.js";
const {start, footer} = PandaConfig;
const {t, path} = useLocale(Astro.url)
---

<footer class="mt-12 mb-6 text-sm">

    <div class="mb-1">
        {footer &&
            footer.map((item, index) => (
                    <span>

              <a href={item.url} class="panda-link">{item.title}</a>
                        {index !== footer.length - 1 && <span class="mx-1">|</span>}
                    </span>

            ))
        }
    </div>
    <div class="mb-1">
        <span>{start}-{new Date().getFullYear()}</span>
    </div>
    <div class="text-sm">
        {t('footer.built-with')}
        <a class="panda-link italic" href="https://astro.build/">astro</a>, {t('footer.inspired-by')}<a
            class="panda-link italic ml-1"
            href="https://github.com/yuhangch/astro-theme-panda">panda</a
    >.
    </div>
</footer>
